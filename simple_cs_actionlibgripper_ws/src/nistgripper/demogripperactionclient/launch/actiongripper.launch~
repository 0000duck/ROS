    <param name="gripper_name" type="str" value="$(arg gripper_name)" />
  </node>
  <node name="nist_gripper_action_client" pkg="demogripperactionclient" 
    type="demogripperactionclient" output="screen">
    <param name="gripper_name" type="str" value="$(arg gripper_name)" />
  </node>
